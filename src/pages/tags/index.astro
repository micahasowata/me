---
import Base from "../../layouts/Base.astro";

const allPosts = await Astro.glob("../posts/*.md");

const uniqueTags = [
  ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];
---

<Base title="Tags">
  <h1>Tags live here</h1>
  {
    uniqueTags.map((tag) => (
      <li>
        <a href={`/tags/${tag}`}>{tag}</a>
      </li>
    ))
  }
</Base>
