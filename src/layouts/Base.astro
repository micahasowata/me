---
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";
import Theme from "../components/Theme.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
const footerDate = new Date().getFullYear();
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body
    class="font-mono grid place-content-center dark:bg-gradient-to-b dark:to-stone-600 dark:from-black dark:text-white py-5"
  >
    <header>
      <nav class="grid grid-cols-12">
        <ul class="grid col-start-2 col-end-12">
          <div class="grid col-start-2 col-end-2 place-content-center">
            <Image
              src={logo}
              alt="personal logo featuring a lowercase m and a lowercase a and a square all white on a black background"
              width={30}
              height={30}
            />
          </div>
          <div class="grid col-start-4 col-end-10">
            <div
              class="flex flex-row space-x-2 place-content-center md:space-x-5"
            >
              <li><a href="/">Home</a></li>
              <li><a href="/posts">Posts</a></li>
              <li><a href="/projects">Projects</a></li>
            </div>
          </div>
          <div class="grid col-start-12 col-end-12 place-content-center">
            <Theme />
          </div>
        </ul>
      </nav>
    </header>
    <main class="grid grid-cols-12">
      <slot />
    </main>
    <footer class="grid grid-cols-12 place-content-center pt-5">
      <a
        href="https://github.com/micahasowata"
        class="grid col-start-2 col-end-12 place-content-center py-3"
        >{`Built by me ${footerDate}.`}</a
      >
    </footer>
  </body>
</html>
