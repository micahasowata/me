---
import Base from "./Base.astro";
const { frontmatter } = Astro.props;
const tags = frontmatter.tags as string[];
---

<Base title={frontmatter.title}>
  <h1>{frontmatter.title}</h1>
  <p>{frontmatter.pubDate}</p>
  <slot />
  {
    tags.map((tag) => (
      <>
        <a href={`/tags/${tag}`}>{tag}</a>
      </>
    ))
  }
</Base>
